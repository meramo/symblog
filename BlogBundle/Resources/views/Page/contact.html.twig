{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact blog</h1>
    </header>

   {# @TODO: Figure out how to work with FlashBags #}

   {#  {% if app.session.getFlashBag('blogger-notice') %}
        <div class="blogger-notice">
            {{ app.session.getFlashBag('blogger-notice') }}
        </div>
    {% endif %} #}

    <p>Want to contact the blog?</p>

    <form action="{{ path('BloggerBlogBundle_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}
